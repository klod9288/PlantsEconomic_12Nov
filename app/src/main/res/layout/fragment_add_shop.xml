<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Content-->
    <ScrollView
        android:layout_above="@id/linBotton"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Image-->
            <ImageView
                android:id="@+id/imvAddShop"
                android:src="@drawable/shop1"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin"
                android:scaleType="fitCenter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/avatar" />

            <!--Name-->
            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Icon-->
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TextField-->
                <EditText
                    android:id="@+id/edtName"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryHint"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--Description-->
            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Icon-->
                <ImageView
                    android:layout_gravity="top"
                    android:src="@drawable/ic_action_descrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TextField-->
                <EditText
                    android:id="@+id/edtDescription"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryHint"
                    android:hint="@string/description"
                    android:lines="3"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--Price-->
            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Icon-->
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--TextField-->
                    <EditText
                        android:layout_weight="3"
                        android:id="@+id/edtPrice"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryHint"
                        android:hint="@string/price"
                        android:inputType="numberDecimal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/spinnerMoney"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"></Spinner>



                </LinearLayout>

            </LinearLayout>

            <!--Stock-->
            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Icon-->
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--TextField-->
                    <EditText
                        android:layout_weight="3"
                        android:id="@+id/edtStock"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryHint"
                        android:hint="stock"
                        android:inputType="number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/spinnerStock"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"></Spinner>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/linBotton"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnBack"
            android:text="Back"
            android:layout_alignParentBottom="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <!--Button Add-->
        <Button
            android:layout_weight="1"
            android:id="@+id/btnAddShop"
            android:text="Add Shop"
            android:layout_alignParentBottom="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>



</RelativeLayout>